         <font>
            <Font name="Ubuntu" size="19.0" />
         </font>
      </Label>
      <ImageView fitHeight="221.0" fitWidth="178.0" layoutX="29.0" layoutY="95.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/userLogin.jpeg" />
         </image>
      </ImageView>
      <Label layoutX="149.0" layoutY="68.0" text="Please enter your login credentials to sign in" textFill="#757272">
         <font>
            <Font name="Ubuntu" size="15.0" />
         </font>
      </Label>
      <TextField fx:id="txtUserName" layoutX="221.0" layoutY="127.0" prefHeight="26.0" prefWidth="321.0" promptText="Enter your Username" />
      <Button fx:id="btnLogin" layoutX="303.0" layoutY="241.0" mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="40.0" prefWidth="158.0" style="-fx-background-color: #60a3bc;" text="Login" textFill="WHITE" />
